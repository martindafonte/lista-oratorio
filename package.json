{
  "name": "trello-list-tool",
  "version": "0.0.2",
  "description": "Aplicación para a utilizar trello como una herramienta para pasar controlar la asistencia a eventos recurrentes",
  "repository": {
    "type": "git",
    "url": "https://github.com/martindafonte/lista-oratorio"
  },
  "author": "Martín Da Fonte",
  "license": "Propietaria",
  "scripts": {
    "start": "npm run serve",
    "serve": "ts-node src/app.ts",
    "serve-compiled": "nodemon dist/src/app.js",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build": "npm run build-ts && npm run copy-static-assets",
    "test": "mocha -r ts-node/register src/**/*.test.ts",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-compiled\""
  },
  "dependencies": {
    "@lasso/marko-taglib": "^1.0.12",
    "body-parser": "^1.18.3",
    "bottleneck": "^2.18.1",
    "compression": "^1.7.3",
    "dotenv": "^6",
    "express": "^4.16.3",
    "get-trello-action-type": "0.0.2",
    "lasso": "^3.2.6",
    "lasso-marko": "^2.4.4",
    "marko": "^4.16.12",
    "morgan": "^1.9.1",
    "nedb": "^1.8.0",
    "node-trello": "^1.3.0",
    "querystring": "^0.2.0",
    "raptor-util": "^3.2.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5"
  },
  "engines": {
    "node": "10.x"
  },
  "keywords": [
    "asistencia",
    "lista",
    "trello",
    "glitch",
    "express",
    "node"
  ],
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.6",
    "@types/compression": "0.0.36",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/marko": "^4.6.0",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/nedb": "^1.8.5",
    "@types/node": "^10.17.6",
    "@types/request-promise-native": "^1.0.15",
    "@types/shelljs": "^0.8.0",
    "chai": "^4.2.0",
    "concurrently": "^4",
    "mocha": "^10.2.0",
    "nodemon": "^1.18.4",
    "shelljs": "^0.8.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "typescript": "^3"
  }
}
