{
  "name": "trello-list-tool",
  "version": "0.0.2",
  "description": "Aplicación para a utilizar trello como una herramienta para pasar controlar la asistencia a eventos recurrentes",
  "repository": {
    "type": "git",
    "url": "https://github.com/martindafonte/lista-oratorio"
  },
  "author": "Martín Da Fonte",
  "license": "Propietaria",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run copy-static-assets",
    "serve": "node dist/src/app.js",
    "watch-node": "nodemon dist/src/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "mocha \"./{,!(node_modules)/**/}*.test.js\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/src/app.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "get-trello-action-type": "0.0.2",
    "marko": "^4.9.7",
    "morgan": "^1.9.0",
    "nedb": "^1.8.0",
    "node-trello": "^1.3.0",
    "querystring": "^0.2.0",
    "rate-limit-promise": "^1.0.2",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5"
  },
  "engines": {
    "node": "10.x"
  },
  "keywords": [
    "asistencia",
    "lista",
    "trello",
    "glitch",
    "express",
    "node"
  ],
  "devDependencies": {
    "@types/node": "^10.5.4",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/morgan": "^1.7.35",
    "@types/nedb": "^1.8.5",
    "@types/shelljs": "^0.7.8",
    "@types/request-promise-native": "^1.0.15",
    "mocha": "^5.1.1",
    "shelljs": "^0.8.1",
    "concurrently": "^3.5.1",
    "typescript": "^2.7.2",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "nodemon": "^1.13.0"
  }
}
